# Heap Size (defaults to 256m min, 1g max)
ES_HEAP_SIZE="<%= node[:elasticsearch][:heap_size] %>"

# Heap new generation
ES_HEAP_NEWSIZE="<%= node[:elasticsearch][:heap_newsize] %>"

# Maximum locked memory size. Set to "unlimited" if you use the
# bootstrap.mlockall option in elasticsearch.yml. You must also set
# ES_HEAP_SIZE.
MAX_LOCKED_MEMORY=unlimited

# Additional Java OPTS
ES_JAVA_OPTS="-XX:SurvivorRatio=8 -XX:MaxTenuringThreshold=1 -XX:+CMSParallelRemarkEnabled -XX:+ParallelRefProcEnabled"

# log GC information
ES_USE_GC_LOGGING=true
